@model Inc2SuchTrans.Models.Attendance

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<html>
<head>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/jquery.timepicker.js"></script>
    <script src="~/Scripts/jquery.timepicker.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>

    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.timepicker.css" rel="stylesheet" />
    <link href="~/Content/jquery.timepicker.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.min.css" rel="stylesheet" />

    <script type="text/javascript">

        $(function () {
            $('.AttendanceDate').datetimepicker({
                viewMode: 'years',
                format: 'DD/MM/YYYY'
            })
        });

        $(function () {
            $('.CheckInTime').timepicker({
                datepicker: false,
                format: 'H:i'
            })
        });

        $(function () {
            $('.CheckOutTime').timepicker({
                datepicker: false,
                format: 'H:i'
            })
        });

    </script>
</head>
<body style="font-family:Arial, Helvetica, sans-serif">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2 class="EveryHeader">Attendance</h2>
        <div class="FilterDivAdmin">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table class="BookingTable" style="line-height:1cm">
                    <tr>
                        <td>@Html.LabelFor(model => model.DriverNumber, "DriverNumber", htmlAttributes: new { @class = "control-label col-md-2" })
                            
                        </td>
                            <td>
                                @Html.DropDownList("DriverID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DriverNumber, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                            <td>
                                
                                     @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control AttendanceDate" } })
                                
                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(model => model.Check_In_Time, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                            <td>
                                    @Html.EditorFor(model => model.Check_In_Time, new { htmlAttributes = new { @class = "form-control CheckInTime" } })
                               
                                @Html.ValidationMessageFor(model => model.Check_In_Time, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(model => model.Check_Out_Time, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                            <td>
                                @Html.EditorFor(model => model.Check_Out_Time, new { htmlAttributes = new { @class = "form-control CheckOutTime" } })
                                @Html.ValidationMessageFor(model => model.Check_Out_Time, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>

                        
                            <br />

                            <div class="form-group">
                                <div class="col-md-offset-0 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" style="border-radius:10px" />

                                </div>
                            </div>

                        </div>

                    </div>
    }


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</body>

</html>
