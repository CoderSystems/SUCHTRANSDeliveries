@model IEnumerable<Inc2SuchTrans.Models.Attendance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="EveryHeader">Attendance List</h2>
<div class="FilterDivAdmin">
    <p style="font-size:large">
        @Html.ActionLink("New Attendance", "Create", null, htmlAttributes: new { @class = "OrangeButton" })
    </p>
    <hr />
    <button type="button" style="padding-right:14px" onclick="location.href='@Url.Action("CreatePfd", "Attendances")';">
        <i class="glyphicon glyphicon-folder-open"></i>  Generate Report
    </button>
    <br />
    <br />

    <table class="DeliveryTable" id="datatable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attendance_No)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Check_In_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Check_Out_Time)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Attendance_No)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Check_In_Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Check_Out_Time)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.AttendanceID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AttendanceID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AttendanceID })*@

                    <a onclick="location.href='@Url.Action("Edit", "Attendances", new { id = item.Attendance_No })';">Edit</a>|
                    <a onclick="location.href='@Url.Action("Details","Attendances",new { id = item.Attendance_No })';">Details</a>|
                    <a onclick="location.href='@Url.Action("Delete","Attendances",new { id = item.Attendance_No })';">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>
<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.tableTools.js"></script>

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/dataTables.tableTools.css" rel="stylesheet" />

<script type="text/javascript">

        $(document).ready(function () {
            var table = $('#datatable').dataTable();
            var tableTools = new $.fn.dataTable.TableTools(table);
            $(tableTools.fnContainer()).insertBefore('#datatable_wrapper');
        });
</script>

