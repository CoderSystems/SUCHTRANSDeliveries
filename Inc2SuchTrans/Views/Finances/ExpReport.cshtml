@model IEnumerable<Inc2SuchTrans.ViewModels.ExpenseVM>
@{ Layout = "~/Views/Finances/_FinanceLayout.cshtml"; }
@using (Html.BeginForm())
{
    @ViewBag.Mike
<h1>Expense Information</h1>
<br/>
        <p>Select a Month and show information from that month forward</p>
        @Html.DropDownList("StartMonth", new SelectList(ViewBag.DatesList, Model), new { @Class = "form-control" })
        <br /><input type="submit" value="Go" class="btn-primary"/>
    
    <br />
    <br />
    <img class="RoundChart" src="@Url.Action("ExpenseBarGraph", new { ChartDate = ViewBag.ChartDate })" alt="Chart Unavaliable" /><br /><br /><br />
    <img class="RoundChart" src="@Url.Action("ExpensePieChart", new { ChartDate = ViewBag.ChartDate })" alt="Chart Unavaliable" /><br /><br /><br />

<h1>Expense Transactions</h1>
<br />
<table class="table">
    <tr>
        <th>
            Transaction ID
        </th>
        <th>
            Transaction Date
        </th>
        <th>
            Description
        </th>
        <th>
            Amount
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.T_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.T_Date.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
    }

</table>
}

<script type="text/javascript">
            $(function () {
                $('.datetimepicker1').datetimepicker();
            });
</script>

@Scripts.Render("~/bundles/datetime")