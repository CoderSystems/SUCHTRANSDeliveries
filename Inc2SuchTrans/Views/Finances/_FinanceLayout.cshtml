<!DOCTYPE html>
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/datetime")
</head>
<body>
