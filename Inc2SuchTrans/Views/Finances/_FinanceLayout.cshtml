    @Html.ActionLink("Incomes", "IncomeStat", "Finances", new { @class = "FinanceNavItem" })
    @Html.ActionLink("Expenses", "ExpReport", "Finances", new { @class = "FinanceNavItem" })
    @Html.ActionLink("Net (All)", "FinanSumm", "Finances", new { @class = "FinanceNavItem" })    
    </div>
    <h1 class="EveryHeader">Financial Statements</h1>
    <hr/>
    <div>
        @RenderBody()
    </div>
    <script type="text/javascript">
            $(function () {
                $('.datetimepicker1').datetimepicker();
            });
    </script>

    @Scripts.Render("~/bundles/datetime")
</body>
</html>
