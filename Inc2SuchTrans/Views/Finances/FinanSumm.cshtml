@model Inc2SuchTrans.ViewModels.AllFinanceInfo
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<style>
    table
    {
        border:2px solid black;
    }
    td
    {
        vertical-align:top;
    }
</style>
<h1>All Financial Infomation</h1>
<br />
<table>
    <tr>
        <th><h3>Income</h3></th>
        <th><h3>Expense</h3></th>
    </tr>
    <tr>
        <td style="background-color:rgba(0,38,255,0.4)">
            <table class="table">
                <tr>
                    <th>
                        Income Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                       Date Recieved
                    </th>
                    <th>
                       Monthly Debit
                    </th>
                    <th>
                       Recieved From
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Incs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IncName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRecieved)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Monthly)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecievedFrom)
                        </td>
                    </tr>
                }

            </table>
        </td>
        <td style="background-color:rgba(255,106,0,0.4)">
            <table class="table">
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Date Created
                    </th>
                    <th>
                        Monthly Debit
                    </th>
                    <th>
                       Paid To
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Exps)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Monthly)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaidTo)
                        </td>
                    </tr>
                }

            </table>

        </td>
    </tr>
</table>
